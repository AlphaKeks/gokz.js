{
	"compilerOptions": {
		"target": "ESNext",
		"moduleDetection": "auto",
		"module": "commonjs",
		"baseUrl": "./",
		"rootDir": "./src/",
		"outDir": "./lib/",
		"moduleResolution": "node",
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"removeComments": true,
		"sourceMap": true,
		"declaration": true
	},
	"exclude": ["./node_modules/", "./.prettierrc.js", "./lib/"]
}
